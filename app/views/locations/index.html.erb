<h1>Listing locations</h1>

<table cellspacing=0 cellpadding=5>
  <tr>
    <th>Name</th>
    <th>Street address</th>
    <th>City</th>
    <th>Zip</th>
    <th>Cost</th>
    <th>Capacity</th>
  </tr>

<% for location in @locations %>
  <tr class="<%= cycle 'even' , 'odd' %>">    <td><%=h location.name %></td>
    <td><%=h location.street_address %></td>
    <td><%=h location.city %></td>
    <td><%=h location.zip %></td>
    <td>$<%=h location.cost %></td>
    <td><%=h location.capacity %></td>
    <td><%= link_to 'Show', location %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= link_to 'Destroy', location, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

